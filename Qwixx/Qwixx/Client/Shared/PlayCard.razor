<h3>PlayCard</h3>

<div>
    @foreach (var cell in Card.RedRow)
    {
       <div class=" @(cell.Signed? "signed" : string.Empty)">@cell.Number</div>
    }

    @foreach (var cell in Card.YellowRow)
    {
       <div class=" @(cell.Signed? "signed" : string.Empty)">@cell.Number</div>
    }

    @foreach (var cell in Card.GreenRow)
    {
        <div class=" @(cell.Signed? "signed" : string.Empty)">@cell.Number</div>
    }

    @foreach (var cell in Card.BlueRow)
    {
        <div class=" @(cell.Signed? "signed" : string.Empty)">@cell.Number</div>
    }


</div>


@code {
    [Parameter]
    public required GameLogic.PlayCard Card { get; set; }
}


